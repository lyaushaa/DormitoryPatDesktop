<Page x:Class="DormitoryPATDesktop.Pages.Students.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DormitoryPATDesktop.Pages.Students"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Add"
      Background="#F5F6F5">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="{Binding TitleName}" 
                       FontSize="28" 
                       FontWeight="SemiBold" 
                       Foreground="#5D6572" 
                       Grid.Row="0" 
                       Margin="0,0,0,10"/>

            <!-- Основная форма в карточке -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="8" 
                    BorderThickness="1" 
                    BorderBrush="#E0E0E0"
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*" MinWidth="250"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ФИО -->
                    <TextBlock Text="ФИО:" 
                               Grid.Row="0" Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="0" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <TextBox x:Name="txtFIO" 
                                 Padding="8"
                                 BorderThickness="0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="Transparent" CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Border>

                    <!-- Группа -->
                    <TextBlock Text="Группа:" 
                               Grid.Row="1" Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="1" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <TextBox x:Name="txtGroup" 
                                 Padding="8"
                                 BorderThickness="0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Формат: ИСП-21-2 (спец-ть-год-номер группы)">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="Transparent" CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Border>

                    <!-- Телефон -->
                    <TextBlock Text="Телефон:" 
                               Grid.Row="2" Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="2" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <TextBox x:Name="txtPhone" 
                                 Padding="8"
                                 BorderThickness="0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="Transparent" CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Border>

                    <!-- Дата рождения -->
                    <TextBlock Text="Дата рождения:" 
                               Grid.Row="3" Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="3" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <DatePicker x:Name="dpBirthDate" 
                                    Padding="8" 
                                    BorderThickness="0"
                                    FontSize="14"
                                    VerticalContentAlignment="Center"
                                    SelectedDateFormat="Short">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </Border>

                    <!-- Этаж -->
                    <TextBlock Text="Этаж:" 
                               Grid.Row="4" Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <ComboBox x:Name="cmbFloor" 
                              Grid.Row="4" Grid.Column="1" 
                              Margin="0,0,0,15" 
                              FontSize="14" 
                              Padding="8">
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="6"/>
                        <ComboBoxItem Content="7"/>
                        <ComboBox.Resources>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Border Background="White" 
                                                    BorderBrush="#B0B0B0" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton" 
                                                                  BorderThickness="0" 
                                                                  Background="Transparent"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press">
                                                        <ContentPresenter x:Name="ContentSite" 
                                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Center"/>
                                                    </ToggleButton>
                                                    <Popup x:Name="Popup"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           Placement="Bottom"
                                                           AllowsTransparency="True">
                                                        <Border MaxHeight="200" 
                                                                MinWidth="{TemplateBinding ActualWidth}"
                                                                Background="White"
                                                                BorderBrush="#B0B0B0"
                                                                BorderThickness="1"
                                                                CornerRadius="5">
                                                            <ScrollViewer>
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <!-- Комната -->
                    <TextBlock Text="Комната:" 
                               Grid.Row="5" Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="5" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <TextBox x:Name="txtRoom" 
                                 Padding="8"
                                 BorderThickness="0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="Transparent" CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Border>

                    <!-- Роль -->
                    <TextBlock Text="Роль:" 
                               Grid.Row="6" Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <ComboBox x:Name="cmbRole" 
                              Grid.Row="6" Grid.Column="1" 
                              Margin="0,0,0,15" 
                              FontSize="14" 
                              Padding="8">
                        <ComboBoxItem Content="Студент"/>
                        <ComboBoxItem Content="Староста этажа"/>
                        <ComboBoxItem Content="Председатель Студенческого совета общежития"/>
                        <ComboBox.Resources>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Border Background="White" 
                                                    BorderBrush="#B0B0B0" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton" 
                                                                  BorderThickness="0" 
                                                                  Background="Transparent"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press">
                                                        <ContentPresenter x:Name="ContentSite" 
                                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Center"/>
                                                    </ToggleButton>
                                                    <Popup x:Name="Popup"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           Placement="Bottom"
                                                           AllowsTransparency="True">
                                                        <Border MaxHeight="200" 
                                                                MinWidth="{TemplateBinding ActualWidth}"
                                                                Background="White"
                                                                BorderBrush="#B0B0B0"
                                                                BorderThickness="1"
                                                                CornerRadius="5">
                                                            <ScrollViewer>
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <!-- Дата заселения -->
                    <TextBlock Text="Дата заселения:" 
                               Grid.Row="7" Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="7" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <DatePicker x:Name="dpCheckInDate" 
                                    Padding="8" 
                                    BorderThickness="0"
                                    FontSize="14"
                                    VerticalContentAlignment="Center"
                                    SelectedDateFormat="Short">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </Border>

                    <!-- Дата выселения -->
                    <TextBlock Text="Дата выселения:" 
                               Grid.Row="8" Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="8" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <DatePicker x:Name="dpCheckOutDate" 
                                    Padding="8" 
                                    BorderThickness="0"
                                    FontSize="14"
                                    VerticalContentAlignment="Center"
                                    SelectedDateFormat="Short">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </Border>

                    <!-- Telegram ID -->
                    <TextBlock Text="Telegram ID:" 
                               Grid.Row="9" Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="9" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1">
                        <TextBox x:Name="txtTelegramId" 
                                 Padding="8"
                                 BorderThickness="0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Остается пустым">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="Transparent" CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Border>
                </Grid>
            </Border>

            <!-- Кнопки действий -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button Content="ОТМЕНА" 
                        Width="120" 
                        Height="36" 
                        Margin="0,0,15,0"
                        Click="CancelButton_Click"
                        Background="#D32F2F"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#B71C1C"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#9A0007"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="СОХРАНИТЬ" 
                        Width="120" 
                        Height="36"
                        Click="SaveButton_Click"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1565C0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>