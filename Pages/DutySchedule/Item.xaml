<UserControl x:Class="DormitoryPATDesktop.Pages.DutySchedule.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DormitoryPATDesktop.Pages.DutySchedule"
             mc:Ignorable="d">
    <Border Grid.Column="1" 
            Margin="0,0,0,0" 
            Background="#F5F6F5" 
            CornerRadius="8" 
            BorderThickness="1">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель фильтров -->
            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="10" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Border CornerRadius="5" BorderBrush="#B0B0B0" BorderThickness="1" Width="200">
                        <TextBox x:Name="txtRoomFilter" 
                             TextChanged="Filter_Changed"
                             Padding="8"
                             BorderThickness="0"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             ToolTip="Введите номер комнаты для фильтрации">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="Transparent" CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Border>                    

                    <Border CornerRadius="5" BorderBrush="#B0B0B0" BorderThickness="1" Width="140" Margin="10,0,0,0">
                        <DatePicker x:Name="dpDateFilter" 
                                SelectedDateChanged="Filter_Changed" 
                                Padding="8" 
                                BorderThickness="0"
                                FontSize="14"
                                VerticalContentAlignment="Center"
                                ToolTip="Выберите дату для фильтрации или оставьте пустым для показа всех записей">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="8,0"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </Border>

                    <ComboBox x:Name="cmbFloorFilter" 
      Width="120" 
      Margin="10,0,0,0"
      SelectionChanged="Filter_Changed"
      FontSize="14"
      VerticalContentAlignment="Center"
      Padding="8">
                        <ComboBoxItem Content="Все этажи" IsSelected="True"/>                        
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="6"/>
                        <ComboBoxItem Content="7"/>
                        <ComboBox.Resources>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Border Background="White" 
        BorderBrush="#B0B0B0" 
        BorderThickness="1" 
        CornerRadius="5">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton" 
                      BorderThickness="0" 
                      Background="Transparent"
                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                                    <ContentPresenter x:Name="ContentSite" 
                         Content="{TemplateBinding SelectionBoxItem}"
                         ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                         HorizontalAlignment="Left"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"/>
                                                    <Popup x:Name="Popup"
               IsOpen="{TemplateBinding IsDropDownOpen}"
               Placement="Bottom"
               AllowsTransparency="True">
                                                        <Border MaxHeight="200" 
                    MinWidth="{TemplateBinding ActualWidth}"
                    Background="White"
                    BorderBrush="#B0B0B0"
                    BorderThickness="1"
                    CornerRadius="5">
                                                            <ScrollViewer>
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <ComboBox x:Name="cmbMonthFilter" 
                          Width="120" 
                          Margin="10,0,0,0"
                          SelectionChanged="Filter_Changed"
                          FontSize="14"
                          VerticalContentAlignment="Center"
                          Padding="8">
                        <ComboBoxItem Content="Все месяцы" IsSelected="True"/>
                        <ComboBoxItem Content="Январь"/>
                        <ComboBoxItem Content="Февраль"/>
                        <ComboBoxItem Content="Март"/>
                        <ComboBoxItem Content="Апрель"/>
                        <ComboBoxItem Content="Май"/>
                        <ComboBoxItem Content="Июнь"/>
                        <ComboBoxItem Content="Июль"/>
                        <ComboBoxItem Content="Август"/>
                        <ComboBoxItem Content="Сентябрь"/>
                        <ComboBoxItem Content="Октябрь"/>
                        <ComboBoxItem Content="Ноябрь"/>
                        <ComboBoxItem Content="Декабрь"/>
                        <ComboBox.Resources>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Border Background="White" 
                                                    BorderBrush="#B0B0B0" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton" 
                                                                  BorderThickness="0" 
                                                                  Background="Transparent"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                                    <ContentPresenter x:Name="ContentSite" 
                                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                      HorizontalAlignment="Left"
                                                                      Margin="8,0,0,0"
                                                                      VerticalAlignment="Center"/>
                                                    <Popup x:Name="Popup"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           Placement="Bottom"
                                                           AllowsTransparency="True">
                                                        <Border MaxHeight="200" 
                                                                MinWidth="{TemplateBinding ActualWidth}"
                                                                Background="White"
                                                                BorderBrush="#B0B0B0"
                                                                BorderThickness="1"
                                                                CornerRadius="5">
                                                            <ScrollViewer>
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <Button Content="Обновить" 
                            Click="RefreshButton_Click" 
                            Margin="10,0,0,0"
                            Padding="10,5"
                            FontSize="14"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1976D2"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#1565C0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="Экспорт в DOCX" 
                            Click="ExportToDocx_Click" 
                            Margin="10,0,0,0"
                            Padding="10,5"
                            FontSize="14"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#45A049"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#388E3C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <!-- DataGrid -->
            <DataGrid Grid.Row="2" 
                      x:Name="ScheduleDataGrid" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Margin="0"
                      Background="White"
                      BorderBrush="#E0E0E0"
                      BorderThickness="1"
                      GridLinesVisibility="None"
                      RowHeight="40"
                      FontSize="14"
                      MouseDoubleClick="ScheduleDataGrid_MouseDoubleClick">
                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#F0F0F0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FAFAFA"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" 
                                       Binding="{Binding ScheduleId}" 
                                       Width="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Этаж" 
                                       Binding="{Binding Floor}" 
                                       Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Комната" 
                                       Binding="{Binding Room}" 
                                       Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Дата" 
                                       Binding="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                       Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Действие" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Удалить" 
                                        Click="DeleteButton_Click"
                                        Foreground="#D32F2F"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Cursor="Hand"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#B71C1C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>