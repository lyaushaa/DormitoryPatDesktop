<Page x:Class="DormitoryPATDesktop.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login"
      Background="#F5F6F5">
    <Grid>
        <Border Background="White"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#E0E0E0"
                Padding="20"
                MaxWidth="400"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Авторизация"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#5D6572"
                           HorizontalAlignment="Center"
                           Grid.Row="0"/>

                <!-- Поле для номера телефона или логина -->
                <TextBlock Text="Телефон или логин:"
                           Grid.Row="2"
                           FontSize="14"
                           Foreground="#616161"
                           Margin="0,0,0,5"/>
                <Border Grid.Row="3"
                        CornerRadius="5"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1">
                    <TextBox x:Name="txtPhoneOrLogin"
                             Padding="8"
                             BorderThickness="0"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             FlowDirection="LeftToRight">
                        <TextBox.Resources>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="Transparent" CornerRadius="4">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Border>

                <!-- Поле для пароля -->
                <TextBlock Text="Пароль:"
                           Grid.Row="4"
                           FontSize="14"
                           Foreground="#616161"
                           Margin="0,15,0,5"/>
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            CornerRadius="5"
                            BorderBrush="#B0B0B0"
                            BorderThickness="1">
                        <Grid>
                            <PasswordBox x:Name="txtPassword"
                                         Padding="8"
                                         BorderThickness="0"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         FlowDirection="LeftToRight"
                                         PasswordChanged="TxtPassword_PasswordChanged">
                                <PasswordBox.Resources>
                                    <Style TargetType="PasswordBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="PasswordBox">
                                                    <Border Background="Transparent" CornerRadius="4">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </PasswordBox.Resources>
                            </PasswordBox>
                            <TextBox x:Name="txtPasswordVisible"
                                     Padding="8"
                                     BorderThickness="0"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     FlowDirection="LeftToRight"
                                     Visibility="Collapsed"
                                     TextChanged="TxtPasswordVisible_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="Transparent" CornerRadius="4">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Border>
                    <Button x:Name="btnShowPassword"
                            Grid.Column="1"
                            Content="👁"
                            Margin="5,0,0,0"
                            Width="30"
                            Height="30"
                            FontSize="14"
                            Background="Transparent"
                            BorderThickness="1"
                            BorderBrush="#B0B0B0"
                            Cursor="Hand"
                            Click="BtnShowPassword_Click"
                            ToolTip="Показать пароль">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5"
                                                    Padding="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#E0E0E0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="txtErrorMessage"
                           Grid.Row="6"
                           FontSize="12"
                           Foreground="#D32F2F"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>

                <!-- Кнопки действий -->
                <StackPanel Grid.Row="6"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,30,0,0">
                    <Button Content="ОТМЕНА"
                            Width="120"
                            Height="36"
                            Margin="0,0,15,0"
                            Click="CancelButton_Click"
                            Background="#D32F2F"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="10,5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#B71C1C"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#9A0007"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="ВОЙТИ"
                            Width="120"
                            Height="36"
                            Click="LoginButton_Click"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="10,5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1976D2"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#1565C0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>