<Page x:Class="DormitoryPATDesktop.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DormitoryPATDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Main"
      Background="#F5F6F5">
    <Grid Margin="15">
        <!-- Header -->
        <Grid VerticalAlignment="Top">
            <Border Height="60" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
                <Label Content="Общежитие ПАТ" 
                       FontSize="28" 
                       FontWeight="SemiBold" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left" 
                       Margin="20,0,0,0" 
                       Foreground="#5D6572"/>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Margin="0,70,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Menu -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <StackPanel x:Name="MenuPanel" Margin="0,10,0,10">
                        <StackPanel.Resources>
                            <Style TargetType="Button" x:Key="MenuButtonStyle">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="Transparent" 
                                                    BorderThickness="0"
                                                    Padding="20,10,0,10"
                                                    CornerRadius="5">
                                                <ContentPresenter Content="{TemplateBinding Content}"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Left"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#5D6572"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </StackPanel.Resources>

                        <Button Content="Заявки на ремонт" 
                                Style="{StaticResource MenuButtonStyle}"
                                Click="ModuleButton_Click"
                                Tag="RepairRequests"
                                x:Name="RepairRequestsBtn"/>

                        <Button Content="Жалобы" 
                                Style="{StaticResource MenuButtonStyle}"
                                Click="ModuleButton_Click"
                                Tag="Complaints"
                                x:Name="ComplaintsBtn"/>

                        <Button Content="Студенты" 
                                Style="{StaticResource MenuButtonStyle}"
                                Click="ModuleButton_Click"
                                Tag="Students"
                                x:Name="StudentsBtn"/>

                        <Button Content="Сотрудники" 
                                Style="{StaticResource MenuButtonStyle}"
                                Click="ModuleButton_Click"
                                Tag="Employees"
                                x:Name="EmployeesBtn"/>

                        <Button Content="Дежурство на кухне" 
                                Style="{StaticResource MenuButtonStyle}"
                                Click="ModuleButton_Click"
                                Tag="DutySchedule"
                                x:Name="DutyScheduleBtn"/>
                    </StackPanel>
                    <Button Content="Выйти" 
                            Margin="20,20,0,10" 
                            VerticalAlignment="Bottom" 
                            Click="Exit" 
                            Background="#D32F2F" 
                            Foreground="White" 
                            Height="30" 
                            FontSize="14" 
                            Width="100" 
                            HorizontalAlignment="Left"
                            Padding="10,5"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#B71C1C"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#9A0007"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" 
                    Margin="10,0,0,0" 
                    Background="White" 
                    CornerRadius="8" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1">
                <ContentControl x:Name="ContentArea" Margin="10,10,10,50"/>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,20,10">
                <!-- Statistic Button -->
                <Button Click="Statistica" 
                        x:Name="sttBtn"         
                        Content="Статистика" 
                        Height="30" 
                        Width="100" 
                        FontSize="14"
                        Background="#FF8BE38E" 
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="10,5"
                        Visibility="Hidden">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1565C0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Add/Back Button -->
                <Button x:Name="addBackBtn" 
                        Content="Добавить" 
                        Height="30" 
                        Width="100" 
                        Margin="10,0,0,0"
                        FontSize="14"  
                        Background="#2196F3" 
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="10,5"
                        Click="AddBack_Click"
                        Visibility="Hidden">  
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1565C0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>            
        </Grid>
    </Grid>
</Page>