<UserControl x:Class="DormitoryPATDesktop.Pages.RepairRequests.MaterialsAnalytics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <Border Grid.Column="1" 
            Margin="0,0,0,0" 
            Background="#F5F6F5" 
            CornerRadius="8" 
            BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Аналитика материалов"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#5D6572"
                           Grid.Row="0"/>

                <!-- Выбор периода -->
                <Border Grid.Row="2"
                        Background="White"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Период:"
                                   FontSize="14"
                                   Foreground="#616161"
                                   Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="cbTimeRange"
                                      Grid.Column="0"
                                      Width="200"
                                      Height="30"
                                      FontSize="14"
                                      SelectionChanged="CbTimeRange_SelectionChanged"
                                      VerticalContentAlignment="Center">
                                <ComboBox.Resources>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Border Background="White" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            CornerRadius="5">
                                                        <Grid>
                                                            <ToggleButton x:Name="ToggleButton" 
                                          BorderThickness="0" 
                                          Background="Transparent"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                                                <TextBlock Text="{Binding SelectedItem.FIO, RelativeSource={RelativeSource AncestorType=ComboBox}, FallbackValue='Выберите период'}" 
                                           Margin="8,0" 
                                           VerticalAlignment="Center"/>
                                                            </ToggleButton>
                                                            <Popup x:Name="Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True">
                                                                <Border MaxHeight="200" 
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        Background="White"
                                        BorderBrush="#B0B0B0"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                                                    <ScrollViewer>
                                                                        <ItemsPresenter/>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Popup>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Resources>
                                <ComboBoxItem Content="Текущий месяц"/>
                                <ComboBoxItem Content="Последние 7 дней"/>
                                <ComboBoxItem Content="Последние 30 дней"/>
                                <ComboBoxItem Content="Пользовательский"/>
                            </ComboBox>
                            <StackPanel x:Name="spCustomRange"
                                        Grid.Column="2"
                                        Orientation="Horizontal"
                                        Visibility="Collapsed">
                                <Border CornerRadius="5" BorderBrush="#B0B0B0" BorderThickness="1" Width="160">
                                    <DatePicker x:Name="dpStartDate"
                                                Padding="8"
                                                BorderThickness="0"
                                                FontSize="14"
                                                SelectedDateChanged="DpDate_SelectedDateChanged"/>
                                </Border>
                                <TextBlock Text=" — "
                                           FontSize="14"
                                           Foreground="#616161"
                                           VerticalAlignment="Center"
                                           Margin="10,0"/>
                                <Border CornerRadius="5" BorderBrush="#B0B0B0" BorderThickness="1" Width="160">
                                    <DatePicker x:Name="dpEndDate"
                                                Padding="8"
                                                BorderThickness="0"
                                                FontSize="14"
                                                SelectedDateChanged="DpDate_SelectedDateChanged"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Аналитика по материалам -->
                <Border Grid.Row="4"
                        Background="White"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Использование материалов"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#5D6572"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtTotalMaterialsCost"
                                   FontSize="14"
                                   Foreground="#616161"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtMostUsedMaterial"
                                   FontSize="14"
                                   Foreground="#616161"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtMonthlyCost"
                                   FontSize="14"
                                   Foreground="#616161"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtMaterialByProblem"
                                   FontSize="14"
                                   Foreground="#616161"/>
                    </StackPanel>
                </Border>

                <!-- Рекомендации по закупкам -->
                <Border Grid.Row="6"
                        Background="White"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Рекомендации по закупкам"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#5D6572"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtSuggestedMaterials"
                                   FontSize="14"
                                   Foreground="#616161"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>