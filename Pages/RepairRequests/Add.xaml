<Page x:Class="DormitoryPATDesktop.Pages.RepairRequests.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Add"
      Background="#F5F6F5">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="{Binding TitleName}" 
                       FontSize="28" 
                       FontWeight="SemiBold" 
                       Foreground="#5D6572" 
                       Grid.Row="0" 
                       Margin="0,0,0,10"/>

            <!-- Основная форма в карточке -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="8" 
                    BorderThickness="1" 
                    BorderBrush="#E0E0E0"
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*" MinWidth="250"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- От кого -->
                    <TextBlock Text="От кого:" 
                               Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="0" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <TextBox x:Name="txtRequester" 
                                 Padding="8"
                                 BorderThickness="0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 IsReadOnly="True"
                                 Background="#FAFAFA">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="#F5F5F5" CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Border>

                    <!-- Место ремонта -->
                    <TextBlock Text="Место ремонта:" 
                               Grid.Row="1" Grid.Column="0"
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="1" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <TextBox x:Name="txtLocation" 
                                 Padding="8"
                                 BorderThickness="0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 IsReadOnly="True"
                                 Background="#FAFAFA">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="#F5F5F5" CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Border>

                    <!-- Описание проблемы -->
                    <TextBlock Text="Описание проблемы:" 
                               Grid.Row="2" Grid.Column="0"
                               VerticalAlignment="Top" 
                               Margin="0,5,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="2" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <TextBox x:Name="txtProblemDescription" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 MinHeight="80"
                                 Padding="8"
                                 BorderThickness="0"
                                 FontSize="14"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto" 
                                 Background="#FAFAFA">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="#F5F5F5" CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Border>

                    <!-- Тип проблемы -->
                    <TextBlock Text="Тип проблемы:" 
                               Grid.Row="3" Grid.Column="0"
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <ComboBox x:Name="cmbProblemType" 
                              Grid.Row="3" Grid.Column="1"
                              Margin="0,0,0,15" 
                              FontSize="14" 
                              Padding="8"
                              IsEnabled="{Binding IsEditMode}">
                        <ComboBoxItem Content="Электрика"/>
                        <ComboBoxItem Content="Сантехника"/>
                        <ComboBoxItem Content="Мебель"/>
                        <ComboBox.Resources>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Border Background="White" 
                                                    BorderBrush="#B0B0B0" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton" 
                                                                  BorderThickness="0" 
                                                                  Background="Transparent"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press">
                                                        <ContentPresenter x:Name="ContentSite" 
                                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Center"/>
                                                    </ToggleButton>
                                                    <Popup x:Name="Popup"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           Placement="Bottom"
                                                           AllowsTransparency="True">
                                                        <Border MaxHeight="200" 
                                                                MinWidth="{TemplateBinding ActualWidth}"
                                                                Background="White"
                                                                BorderBrush="#B0B0B0"
                                                                BorderThickness="1"
                                                                CornerRadius="5">
                                                            <ScrollViewer>
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <!-- Мастер -->
                    <TextBlock Text="Назначить мастера:" 
                               Grid.Row="4" Grid.Column="0"
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <ComboBox x:Name="cmbMaster" 
                              Grid.Row="4" Grid.Column="1"
                              DisplayMemberPath="FIO" 
                              Margin="0,0,0,15" 
                              FontSize="14" 
                              Padding="8"
                              >
                        <ComboBox.Resources>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Border Background="White" 
                                                    BorderBrush="#B0B0B0" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton" 
                                                                  BorderThickness="0" 
                                                                  Background="Transparent"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press">
                                                        <ContentPresenter x:Name="ContentSite" 
                                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Center"/>
                                                    </ToggleButton>
                                                    <Popup x:Name="Popup"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           Placement="Bottom"
                                                           AllowsTransparency="True">
                                                        <Border MaxHeight="200" 
                                                                MinWidth="{TemplateBinding ActualWidth}"
                                                                Background="White"
                                                                BorderBrush="#B0B0B0"
                                                                BorderThickness="1"
                                                                CornerRadius="5">
                                                            <ScrollViewer>
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <!-- Статус -->
                    <TextBlock Text="Статус заявки:" 
                               Grid.Row="5" Grid.Column="0"
                               VerticalAlignment="Center" 
                               Margin="0,0,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <ComboBox x:Name="cmbStatus" 
                              Grid.Row="5" Grid.Column="1"
                              Margin="0,0,0,15" 
                              FontSize="14" 
                              Padding="8">
                        <ComboBoxItem Content="Создана"/>
                        <ComboBoxItem Content="В обработке"/>
                        <ComboBoxItem Content="Ожидает запчастей"/>
                        <ComboBoxItem Content="Завершена"/>
                        <ComboBoxItem Content="Отклонена"/>
                        <ComboBox.Resources>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Border Background="White" 
                                                    BorderBrush="#B0B0B0" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton" 
                                                                  BorderThickness="0" 
                                                                  Background="Transparent"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press">
                                                        <ContentPresenter x:Name="ContentSite" 
                                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Center"/>
                                                    </ToggleButton>
                                                    <Popup x:Name="Popup"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           Placement="Bottom"
                                                           AllowsTransparency="True">
                                                        <Border MaxHeight="200" 
                                                                MinWidth="{TemplateBinding ActualWidth}"
                                                                Background="White"
                                                                BorderBrush="#B0B0B0"
                                                                BorderThickness="1"
                                                                CornerRadius="5">
                                                            <ScrollViewer>
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <!-- Комментарий -->
                    <TextBlock Text="Комментарий мастера:" 
                               Grid.Row="6" Grid.Column="0"
                               VerticalAlignment="Top" 
                               Margin="0,5,15,15"
                               FontSize="14" 
                               Foreground="#616161"/>
                    <Border Grid.Row="6" Grid.Column="1" 
                            CornerRadius="5" 
                            BorderBrush="#B0B0B0" 
                            BorderThickness="1" 
                            Margin="0,0,0,15">
                        <TextBox x:Name="txtMasterComment" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 MinHeight="80"
                                 Padding="8"
                                 BorderThickness="0"
                                 FontSize="14"
                                 VerticalScrollBarVisibility="Auto">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="Transparent" CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Border>

                    <!-- Даты -->
                    <Grid Grid.Row="7" Grid.ColumnSpan="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Дата создания:" 
                                       Margin="0,0,0,5"
                                       FontSize="14" 
                                       Foreground="#616161"/>
                            <Border CornerRadius="5" 
                                    BorderBrush="#B0B0B0" 
                                    BorderThickness="1">
                                <TextBox x:Name="txtCreationDate" 
                                         Padding="8"
                                         BorderThickness="0"
                                         FontSize="14"
                                         IsReadOnly="True">
                                    <TextBox.Resources>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="Transparent" CornerRadius="4">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Последнее изменение:" 
                                       Margin="0,0,0,5"
                                       FontSize="14" 
                                       Foreground="#616161"/>
                            <Border CornerRadius="5" 
                                    BorderBrush="#B0B0B0" 
                                    BorderThickness="1">
                                <TextBox x:Name="txtLastUpdateDate" 
                                         Padding="8"
                                         BorderThickness="0"
                                         FontSize="14"
                                         IsReadOnly="True">
                                    <TextBox.Resources>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="Transparent" CornerRadius="4">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Кнопки действий -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button Content="ОТМЕНА" 
                        Width="120" 
                        Height="36" 
                        Margin="0,0,15,0"
                        Click="CancelButton_Click"
                        Background="#D32F2F"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#B71C1C"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#9A0007"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="СОХРАНИТЬ" 
                        Width="120" 
                        Height="36"
                        Click="SaveButton_Click"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1565C0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>